<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:PortfolioManager.UI.Views"
                    xmlns:viewmodels="clr-namespace:PortfolioManager.UI.ViewModels">



    <DataTemplate DataType="{x:Type viewmodels:PortfolioSummaryViewModel}">

        <DataTemplate.Resources>
            
            <DataTemplate DataType="{x:Type viewmodels:ChangeInValue}" >
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Value, StringFormat={}{0:c0}, Mode=OneWay}" TextAlignment="Right"/>
                        <TextBlock Text="{Binding Percentage, StringFormat={}{0:p}, Mode=OneWay}" TextAlignment="Right"/>
                    </StackPanel>
                    <Path Margin="0,0,0,0" Width="20" Height="22" Stretch="Fill" >
                        <Path.Style>
                            <Style TargetType="{x:Type Path}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Direction, Mode=OneWay}" Value="Increase">
                                        <Setter Property="Data" Value="{StaticResource UpArrow}" />
                                        <Setter Property="Fill" Value="Green" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Direction, Mode=OneWay}" Value="Decrease">
                                        <Setter Property="Data" Value="{StaticResource DownArrow}" />
                                        <Setter Property="Fill" Value="Red" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Path.Style>
                    </Path> 
                </StackPanel>
            </DataTemplate>
        </DataTemplate.Resources>
        
        
        
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{Binding Path=MarketValue, StringFormat={}{0:c0}, Mode=OneWay}" FontSize="30" Padding="0,0,30,0"/>
                <ContentControl Content="{Binding ChangeInValue, Mode=OneWay}" Grid.Column="2" HorizontalAlignment="Right"  VerticalAlignment="Center" />
            </StackPanel>
            
            <ItemsControl ItemsSource="{Binding Path=Holdings}" HorizontalContentAlignment="Stretch" Padding="10,30,10,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="2,0,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Button Content="{Binding CompanyName, Mode=OneWay}" Grid.Column="0" Style="{StaticResource LinkButton}"  VerticalAlignment="Center" Command="{Binding NavigateToCommand, Mode=OneWay, Source={StaticResource ViewNavigator}}" CommandParameter="{Binding HoldingSummaryView,Mode=OneWay}" />
                            <TextBlock Text="{Binding CurrentValue, StringFormat={}{0:c0}, Mode=OneWay}" Grid.Column="1" Style="{StaticResource ListText}" TextAlignment="Right"  VerticalAlignment="Center" />
                            <ContentControl Content="{Binding ChangeInValue, Mode=OneWay}" Grid.Column="2" HorizontalAlignment="Right"  VerticalAlignment="Center" />

                        </Grid>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

    </DataTemplate>

</ResourceDictionary>