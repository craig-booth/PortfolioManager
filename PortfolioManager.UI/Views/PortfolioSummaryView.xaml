<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:PortfolioManager.UI.Views"
                    xmlns:viewmodels="clr-namespace:PortfolioManager.UI.ViewModels">



    <DataTemplate DataType="{x:Type viewmodels:PortfolioSummaryViewModel}">

        <StackPanel Orientation="Vertical">
            <TextBlock>Portfolio</TextBlock>
            <TextBlock Text="{Binding Path=MarketValue}"/>
            <ListView ItemsSource="{Binding Path=Holdings}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding ASXCode}" Margin="10,0,0,10" />
                            <TextBlock Text="{Binding CurrentValue}" Margin="10,0,0,10" />
                            <TextBlock Text="{Binding CapitalGain}" Margin="10,0,0,10" />
                            <TextBlock Text="{Binding CapitalGainPercentage}" Margin="10,0,0,10" />
                            <Button Command="{Binding NavigateToCommand, Mode=OneWay, Source={StaticResource ViewNavigator}}" CommandParameter="{Binding HoldingSummaryView,Mode=OneWay}">Summary</Button>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

    </DataTemplate>

</ResourceDictionary>