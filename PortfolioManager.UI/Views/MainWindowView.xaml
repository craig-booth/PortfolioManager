<Window x:Class="PortfolioManager.UI.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PortfolioManager.UI.Views"
        xmlns:viewmodels="clr-namespace:PortfolioManager.UI.ViewModels"
        xmlns:utilities="clr-namespace:PortfolioManager.UI.Utilities"
        mc:Ignorable="d"
        Title="Portfolio Manager" Height="519.833" Width="804.878">

    <Window.Resources>
        <viewmodels:MainWindowViewModel x:Key="ViewModel" />
    </Window.Resources>

    <Window.DataContext>
        <Binding Source="{StaticResource ViewModel}"/>
    </Window.DataContext>

    <DockPanel LastChildFill="True">

        <ListView DockPanel.Dock="Left" ItemsSource="{Binding Modules}" SelectedItem="{Binding SelectedModule, Mode=TwoWay}" Width="150" BorderThickness="1,1,0,1" Foreground="White">
            <ListView.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF040DC0"/>
                </LinearGradientBrush>
            </ListView.Background>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button>
                        <Button.Template>
                            <ControlTemplate>
                                <TextBlock Text="{Binding Label, Mode=OneWay}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <ContentControl Content="{Binding SelectedModule, Mode=OneWay}" >
            <ContentControl.Template>
                <ControlTemplate>
                    <TextBlock Text="{Binding SelectedModule.Label}"/>
                </ControlTemplate>
            </ContentControl.Template>
        </ContentControl>

    </DockPanel>

</Window>
