<Window x:Class="PortfolioManager.UI.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PortfolioManager.UI.Views"
        xmlns:viewmodels="clr-namespace:PortfolioManager.UI.ViewModels"
        xmlns:utilities="clr-namespace:PortfolioManager.UI.Utilities"
        mc:Ignorable="d"
        Title="Portfolio Manager" Height="519.833" Width="804.878">

    <Window.Resources>
        <viewmodels:MainWindowViewModel x:Key="ViewModel" />
    </Window.Resources>

    <Window.DataContext>
        <Binding Source="{StaticResource ViewModel}"/>
    </Window.DataContext>

    <DockPanel LastChildFill="True">

        <ListView DockPanel.Dock="Left" ItemsSource="{Binding Menu}" Width="150" BorderThickness="1,1,0,1" Foreground="White">
            <ListView.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF040DC0"/>
                </LinearGradientBrush>
            </ListView.Background>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding NavigateToCommand, Mode=OneWay, Source={StaticResource ViewNavigator}}" CommandParameter="{Binding View,Mode=OneWay}">
                        <Button.Template>
                            <ControlTemplate>
                                <TextBlock Text="{Binding Heading, Mode=OneWay}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="30">
            <Button Command="{Binding NavigateBackCommand, Mode=OneWay, Source={StaticResource ViewNavigator}}" CommandParameter="{Binding View,Mode=OneWay}">
                <Button.Template>
                    <ControlTemplate>
                        <TextBlock Margin="10,0" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"><![CDATA[<]]></TextBlock>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock FontWeight="Bold" VerticalAlignment="Center" Padding="5,0,0,0" FontSize="16" Text="{Binding CurrentViewModel.Heading, Source={StaticResource ViewNavigator}, Mode=OneWay}" />
        </StackPanel>

        <ContentControl Content="{Binding CurrentViewModel, Source={StaticResource ViewNavigator}, Mode=OneWay}" />

    </DockPanel>

</Window>
