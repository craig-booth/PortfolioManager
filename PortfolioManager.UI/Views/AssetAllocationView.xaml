<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:PortfolioManager.UI.Views"
                    xmlns:viewmodels="clr-namespace:PortfolioManager.UI.ViewModels"
                    xmlns:controls="clr-namespace:PortfolioManager.UI.Controls">

    <DataTemplate DataType="{x:Type viewmodels:AssetAllocationViewModel}">

       
            <controls:DataTable Data="{Binding Categories}" DataType="{x:Type viewmodels:CategoryValue}" Margin="0,10,0,0">
                <controls:DataTable.Columns>
                    <controls:DataTableColumn Heading="Category" Width="120" MemberBinding="{Binding Category, Mode=OneWay}" />
                    <controls:DataTableColumn Heading="Amount" Width="70" MemberBinding="{Binding Value, StringFormat={}{0:c2}, Mode=OneWay}" TextAlignment="Right" />
                <controls:DataTableColumn Heading="Percentage" Width="70" MemberBinding="{Binding Percentage, StringFormat={}{0:p2}, Mode=OneWay}" TextAlignment="Right" />
            </controls:DataTable.Columns>
            </controls:DataTable>

       
    </DataTemplate>

</ResourceDictionary>